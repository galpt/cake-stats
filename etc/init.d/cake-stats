#!/bin/sh /etc/rc.common
# cake-stats - real-time CAKE SQM statistics web dashboard
# OpenWrt procd init script

START=95
STOP=10
USE_PROCD=1

PROG="/usr/bin/cake-stats"
HOST="${CAKE_STATS_HOST:-0.0.0.0}"
PORT="${CAKE_STATS_PORT:-11112}"
INTERVAL="${CAKE_STATS_INTERVAL:-1s}"

validate_binary() {
	if [ ! -x "$PROG" ]; then
		echo "ERROR: $PROG not found or not executable" >&2
		logger -t cake-stats "ERROR: binary $PROG not found"
		return 1
	fi
	return 0
}

start_service() {
	validate_binary || return 1

	logger -t cake-stats "Starting on $HOST:$PORT (interval $INTERVAL)"

	procd_open_instance
	procd_set_param command "$PROG" \
		-host     "$HOST" \
		-port     "$PORT" \
		-interval "$INTERVAL"
	procd_set_param pidfile /var/run/cake-stats.pid
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_set_param respawn 3600 5 5
	procd_close_instance
}

stop_service() {
	logger -t cake-stats "Stopping"
}

reload_service() {
	stop
	start
}

service_triggers() {
	procd_add_reload_trigger "cake-stats"
}
